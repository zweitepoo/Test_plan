<Page x:Class="Test_plan.TestResults"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test_plan"
      mc:Ignorable="d" 
      Height="800"
      Width="1600"
      Background="#FF545353"
      Title="TestResults">

    <Grid>
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Stretch">
            <Label Content="tests result directory"/>
            <TextBox/>
            <Label Content="test results"/>
            <ListBox VerticalAlignment="Stretch" MinHeight="500"/>            
            
        </StackPanel> 
        

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5*"/>            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height ="6*"/>
        </Grid.RowDefinitions>     
        
    </Grid>

</Page>
